{
  "name": "university-management",
  "version": "1.0.0",
  "description": "A university management related service",
  "main": "src/server.ts",
  "scripts": {
    "start": "tsc && node dist/server.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint --ext .js,.ts .",
    "lint-fix": "eslint . --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "lint-pritter": "yarn lint-fix && yarn format",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "src/**/*.ts": "yarn lint-pritter"
  },
  "repository": "https://github.com/RiyaadHossain/University-Management.git",
  "keywords": [
    "Node",
    "Express",
    "TypeScript",
    "MongoDB",
    "Mongoose"
  ],
  "author": "Riyad Hossain",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "eslint": "^8.41.0",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0",
    "mongoose": "^7.2.1",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  }
}
